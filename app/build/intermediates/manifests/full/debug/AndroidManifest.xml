<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aravind.techies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.aravind.techies.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.aravind.techies.Selected_item" />
        <activity
            android:name="com.example.aravind.techies.Event"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.aravind.techies.Scanner"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <service
            android:name="com.example.aravind.techies.UploadService"
            android:exported="false" />

        <activity
            android:name="com.example.aravind.techies.Display"
            android:label="@string/title_activity_display"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>